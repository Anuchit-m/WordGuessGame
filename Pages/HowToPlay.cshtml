@page
@model HowToPlayModel
@{
    ViewData["Title"] = "วิธีการเล่น";
    Layout = "_Layout";
}

<div class="page-container">
    <div class="page-content-wrapper page-content-wrapper--wide">
        <h2 class="page-title">Welcome to Word Guess</h2>
        <p class="page-subtitle">ทายคำ รับคะแนน และไต่อันดับ ขึ้นเป็น No.1</p>

        <div class="howtoplay-section">
            <h3 class="section-title">วิธีการเล่น</h3>
            <ol class="howtoplay-list">
                <li class="howtoplay-item">
                    <strong>ทายคำ:</strong> ใช้คำใบ้ที่ให้มาเพื่อทายคำที่ซ่อนอยู่
                </li>
                <li class="howtoplay-item">
                    <strong>สุ่มคำศัพท์:</strong> ท้าทายตัวเองด้วยเกมทายคำศัพท์แบบสุ่มเพื่อรับคะแนน
                </li>
                <li class="howtoplay-item">
                    <strong>รับคะแนน:</strong> ทายถูก รับคะแนน! คะแนนของคุณจะถูกรวมในตารางคะแนน
                </li>
            </ol>
        </div>

        <div class="action-section">
            @if (User.Identity.IsAuthenticated)
            {
                <button class="btn btn--primary" onclick="location.href='/Category'">เล่น</button>
            }
            else
            {
                <button class="btn btn--primary" onclick="location.href='/Category'">เล่นโดยไม่ต้องเข้าสู่ระบบ</button>
            }
            </button>
        </div>
    </div>
</div>
