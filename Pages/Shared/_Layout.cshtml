<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Word Guess</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WordGuessGame.styles.css" asp-append-version="true" />
    
    <!-- Google Fonts for better typography -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="layout-container">
        <header class="main-header">
            <div class="header-content">
                <div class="brand-section">
                    <div class="brand-icon-wrapper">
                        <img src="~/image/WordGuess.png" alt="Word Guess Logo" class="brand-logo-icon" />
                    </div>
                    <a class="brand-title" asp-area="" asp-page="/Index">Word Guess</a>
                </div>
                
                <div class="header-flex">
                    <div class="nav-links">
                        <a href="/HowToPlay" class="nav-link">วิธีการเล่น</a>
                        <a href="/Leaderboard" class="nav-link">ตารางคะแนน</a>
                    </div>
                    
                    <!-- This is the crucial change -->
                    <!-- We are now using the _LoginPartial view to dynamically show login/logout buttons -->
                    <div class="auth-buttons">
                        <partial name="_LoginPartial" />
                    </div>

                </div>
            </div>
        </header>
        
        <div class="main-wrapper">
            <div class="content-container">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
